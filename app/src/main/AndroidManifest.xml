<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.punked.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/artists" />
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/albums" />
        <activity
            android:name=".SongsActivity"
            android:label="@string/songs" />
        <activity
            android:name=".TitlesActivity"
            android:label="@string/titles" />
        <activity android:name=".ArtistDetailsActivity"
            android:label="@string/artist_details"/>
        <activity android:name=".AlbumDetailsActivity"
            android:label="@string/album_details"></activity>
    </application>

</manifest>